<div class="layout">
    <div class="header">
        @Header
    </div>
    <div class="body">
        <div class="sider">
            @Sidebar
        </div>
        <main>
            @Body
        </main>
    </div>
    @if (ShowFooter)
    {
        <div class="footer">
            @Footer
        </div>
    }

</div>

@code{
    [Parameter]
    public RenderFragment? Header { get; set; }
    [Parameter] 
    public RenderFragment? Sidebar { get; set; }
    [Parameter]
    public RenderFragment? Body { get; set; }
    [Parameter]
    public RenderFragment? Footer { get; set; }
    [Parameter]
    public bool ShowFooter { get; set; } = true;

}