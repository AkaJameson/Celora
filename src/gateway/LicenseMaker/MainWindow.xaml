<Window x:Class="LicenseMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Maker" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,10" Grid.Row="0">
            <TextBlock Text="账户名：" />
            <TextBox x:Name="UserNameBox" Width="300" />
        </StackPanel>
        <StackPanel Margin="0,0,0,10" Grid.Row="1">
            <TextBlock Text="用户名：" />
            <TextBox x:Name="AccountBox" Width="300" />
        </StackPanel>
       
        <StackPanel Margin="0,10,0,10" Grid.Row="2">
            <TextBlock Text="密码：" />
            <PasswordBox x:Name="PasswordBox" Width="300" />
        </StackPanel>

        <StackPanel Margin="0,10,0,10" Grid.Row="3">
            <TextBlock Text="过期时间：" />
            <DatePicker x:Name="ExpireDatePicker" />
        </StackPanel>

        <Button Grid.Row="4" Content="生成授权文件" Width="150" Height="30" HorizontalAlignment="Left" Click="GenerateLicense_Click"/>
    </Grid>
</Window>
